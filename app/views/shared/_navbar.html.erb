<nav class="navbar costum-navbar d-flex w-100 position-relative">
  <div class="container d-flex justify-content-between align-items-center">
    <!-- Logo -->
    <a class="navbar-brand" href="#">
      <%= image_tag "logo-duck.jpg", alt: "Logo - Duck with sunglasses", width: 75, height: 75, class: "rounded-circle navbar-logo" %>
    </a>

    <!-- Search Form -->
    <div class="search-container mx-auto">
      <%= form_with url: root_path, method: :get, local: true, class: "form-inline d-flex justify-content-center align-items-center" do |form| %>
        <%= form.text_field :query, placeholder: "Find your Rubberduck...", class: "form-control search-input mr-2 rounded-pill", size: 30 %>
        <%= form.submit "Search", class: "btn btn-outline-primary rounded-pill search-button" %>
      <% end %>
    </div>

    <!-- Right-side buttons: Float Duck and Profile -->
    <div class="d-flex align-items-center">
      <!-- Float Duck Link -->
      <%= link_to 'Float your duck', '#', class: "btn btn-link float-duck-btn" %>

      <!-- Profile Dropdown -->
      <div class="dropdown">
        <a href="#" class="dropdown-toggle btn btn-outline-secondary rounded-pill profile-btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= image_tag "logo-duck.jpg", alt: "User Avatar", class: "rounded-circle", width: 30, height: 30 %>
          Profile
        </a>
        <div class="dropdown-menu dropdown-menu-right">
          <%= link_to 'Profile', '#', class: "dropdown-item" %>
          <%= link_to 'Settings', '#', class: "dropdown-item" %>
          <%= link_to 'Logout', '#', method: :delete, class: "dropdown-item" %>
        </div>
      </div>
    </div>
  </div>
</nav>
