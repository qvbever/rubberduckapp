<nav class="navbar costum-navbar d-flex" style="width: 100%; position :relative;">
  <div class="container">
    <a class="navbar-brand" href="<%= rubberducks_path %>">
      <%= image_tag "logo-duck.jpg", alt: "Logo - Duck with sunglasses", width: 75, height: 75, class: "rounded-circle navbar-logo" %>
    </a>
    <!-- Search Form -->
    <div class="d-flex justify-content-center align-items-center mx-auto">
      <%= form_with url: root_path, method: :get, local: true, class: "form-inline d-flex justify-content-center align-items-center" do |form| %>
        <%= form.text_field :query, placeholder: "Find your Rubberduck...", class: "form-control mr-sm-2 rounded-pill", size: 30 %>
        <%= form.submit "Search", class: "btn btn-outline-primary my-2 my-sm-0 rounded-pill" %>
      <% end %>
    </div>
    <!-- Right-side buttons: Sign Up and User Profile -->
    <div class="d-flex">
      <%= link_to 'Float your duck', new_user_session_path, class: "btn btn-link", style: "text-decoration: none; color: black;" %> <!-- Replace '#' with actual signup link -->
      <!-- Profile dropdown -->
      <div class="dropdown mr-2 rounded-pill">
        <a href="#" class="dropdown-toggle btn btn-outline-secondary rounded-pill" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= image_tag "logo-duck.jpg", alt: "User Avatar", class: "rounded-circle", width: 30, height: 30 %>
          <i class="fa-solid fa-bars"></i>
        </a>
        <div class="dropdown-menu dropdown-menu-right ">
          <% if user_signed_in? %>
            <%= link_to 'Profile', user_path(@user), class: "dropdown-item" %> <!-- Replace '#' with actual profile link -->
            <%= link_to 'Settings', '#', class: "dropdown-item" %> <!-- Replace '#' with actual settings link -->
            <%= button_to 'Logout',  destroy_user_session_path, method: :delete, class: "dropdown-item" %> <!-- Replace '#' with actual logout link -->
          <% else %>
            <%= link_to 'Log In / Sign Up', new_user_session_path, class: "dropdown-item" %> <!-- Replace '#' with actual profile link -->
            <%= link_to 'Settings', new_user_session_path, class: "dropdown-item" %> <!-- Replace '#' with actual settings link -->
          <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>
