<%= simple_form_for [@user, @rubberduck] do |f| %>
<%= f.input :name %>
<%= f.input :city %>
<%= f.input :outfit %>
<%= f.input :price %>
<%= f.input :description %>
<%= f.submit @rubberduck.persisted? ? 'Update Rubberduck' : 'Add Rubberduck',
  data: { confirm: @rubberduck.persisted? ? "Are you sure you want to update this Rubberduck?" : "Are you sure you want to add this Rubberduck?" } %>
<% end %>
